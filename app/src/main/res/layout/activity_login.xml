<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sono"
    android:visibility="visible"
    tools:context="br.edu.iff.pooa20172.projeto.LoginActivity">

    <TextView
        android:id="@+id/label_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:text="Nome"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/et_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/label_nome"
        android:layout_below="@+id/label_nome"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/label_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/et_nome"
        android:layout_below="@+id/et_nome"
        android:layout_marginTop="24dp"
        android:text="Senha"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/ed_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_nome"
        android:layout_alignStart="@+id/label_senha"
        android:layout_below="@+id/label_senha"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/id_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ed_senha"
        android:layout_centerVertical="true"
        android:layout_marginEnd="65dp"
        android:text="Entrar" />

    <Button
        android:id="@+id/id_inscrever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id_login"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/label_senha"
        android:text="Inscrever" />

</RelativeLayout>
